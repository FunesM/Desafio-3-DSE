@model IEnumerable<Desafio3DSE.Models.Clientes>

@{
    ViewBag.Title = "Index";
}
<h2>Clientes</h2>

<p>
    @Html.ActionLink("Añadir cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidoCl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorreoCl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApellidoCl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CorreoCl)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}
</table>
